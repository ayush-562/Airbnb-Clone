<style>
    html, body {
        overscroll-behavior-x: none;
    }
    
    #filter-wrapper {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
    }

    .scroller-container {
        display: flex;
        align-items: center;
        position: relative;
        flex: 1; /* Allows scroller to take available space */
        overflow: hidden;
        padding: 0 50px;
    }

    .filter-scroller {
        /* --size: 1rem;
        display: grid;
        gap: var(--size);
        grid-auto-flow: column;
        grid-auto-columns: 7%;
        overflow-x: auto;
        overscroll-behavior-inline: contain; */
        display: flex;
        overflow-x: auto;
        scroll-behavior: smooth;
        align-items: center;
    }

    .filter-scroller::-webkit-scrollbar {
        display: none;
    }

    .filter {
        /* display: grid;
        gap: 0.25rem;
        text-align: center;
        margin-top: 2rem; */
        min-width: 100px;
        padding: 10px;
        text-align: center;
        /* border: 1px solid #ccc; */
        /* border-radius: 5px; */
        /* background-color: #f9f9f9; */
        white-space: nowrap;
        opacity: 0.7;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }

    .filter p {
        font-size: 0.8rem;
    }

    .scroll-btn {
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 50%;
        font-size: 20px;
        cursor: pointer;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        z-index: 1;
    }

    .scroll-btn.left {
        position: absolute;
        left: 1px;
    }

    .scroll-btn.right {
        position: absolute;
        right: 1px;  
    }

    .scroll-btn:focus {
        outline: none;
    }

    .tax-info {
        display: none;
    }

    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: auto;
        display: flex;
        align-items: center;
    }
</style>

